@page
@model Vedect.Pages.Admin.CamerasModel
@{
    ViewData["Title"] = "Camera Monitor";
}

<div class="container mt-5">
    <h2 class="mb-4">Camera Status</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Stream URL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cam in Model.Cameras)
            {
                <tr>
                    <td>@cam.CameraName</td>
                    <td style="max-width:250px; overflow:auto;">
                        <a href="@cam.StreamUrl" target="_blank">@cam.StreamUrl</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
