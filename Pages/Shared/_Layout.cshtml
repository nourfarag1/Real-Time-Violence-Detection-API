@inject IHttpContextAccessor HttpContextAccessor
@{
    var adminUsername = HttpContextAccessor.HttpContext?.Session.GetString("AdminUsername");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vdect Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Admin/Index">Vdect Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/AssignSubscription">Assign Plan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/UserPlanRequests">User Requests</a>
                        </li>
                    </ul>
                    @if (!string.IsNullOrEmpty(adminUsername))
                    {
                        <span class="navbar-text me-3">Logged in as <strong>@adminUsername</strong></span>
                        <form method="post" asp-page="/Admin/Logout">
                            <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-5">
        <div class="container">
            <span class="text-muted">© 2025 Vdect</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
